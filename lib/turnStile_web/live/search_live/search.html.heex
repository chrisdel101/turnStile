<div>
  <h2><%= @page_title %></h2>
  <.form
    let={f}
    for={:search}
    id="user-search-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
    <main class="container">
      <p class="alert alert-info" role="alert"
        phx-click="lv:clear-flash"
        phx-value-key="info"><%= live_flash(@flash, :info) %></p>
      <p class="alert alert-success" role="alert"
          phx-click="lv:clear-flash"
          phx-value-key="success"><%= live_flash(@flash, :success) %></p>
      <p class="alert alert-danger" role="alert"
        phx-click="lv:clear-flash"
        phx-value-key="error"><%= live_flash(@flash, :error) %></p>
      <p class="alert alert-warning" role="alert"
        phx-click="lv:clear-flash"
        phx-value-key="warning"><%= live_flash(@flash, :warning) %></p>
    </main>
      
    <%= label f, :Enter_user_name %>
    <%= text_input f, :user_name_input, placeholder: "Enter user last name and first name" %>
    <%= error_tag f, :user_name_input %>
   
  
    <div>
      <%= submit "Save", phx_disable_with: "Saving..."
      %>
    </div>
  </.form>
  <div class="users-search-list">
  <%!-- <% IO.inspect(@users) %> --%>
    <%= for user <- @users do %>
      <%= if length(@users) > 0 do %>
      <% IO.inspect(length(@users)) %>
      <dl>
        <dt><%= "#{user.first_name} #{user.last_name}" %></dt>
        <dd><%= user.health_card_num %></dd>
      </dl>
    <% else %>
      <p>No users found</p>
      
    <% end %>
  <% end %>
  </div>
</div>
